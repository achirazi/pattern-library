<div class="global-wrapper" data-item-type="research-article">
  <div class="global-inner">
    <div class="wrapper wrapper--site-header">
      {{#siteHeader}}
        {{> organisms-site-header }}
      {{/siteHeader}}
    </div>

    {{#infoBars}}
      {{> atoms-info-bar }}
    {{/infoBars}}
      
    <div class="section-wrapper wrapper">
      
      {{#contentHeader}}
        {{> organisms-content-header-journal }}
      {{/contentHeader}}

      <aside role="complementary" class="aside" id="asideContent">
        Aside element
      </aside>

      <main role="main" class="main blg-margin-bottom-large" id="maincontent">

        {{#modalWindowCitation}}
          {{> atoms-modal-window}}
        {{/modalWindowCitation}}
        
        {{#modalWindowShare}}
          {{> atoms-modal-window}}
        {{/modalWindowShare}}
        
        <div class="content-container-grid">
        
          {{#viewSelector}}
            {{> molecules-view-selector }}
          {{/viewSelector}}
        
        
          <div class="main-content-grid">
        
            <div data-behaviour="DelegateBehaviour" data-delegate-behaviour="Popup" data-selector="a">
            {{#articleSections}}
              {{> molecules-article-section }}
            {{/articleSections}}
            </div>
        
            {{#iframe}}
              {{!> atoms-iframe }}
            {{/iframe}}
        
            {{! Decided this will be content, serverside }}
            {{#pl-only-article-section-for-download-links}}
              {{> molecules-pl-only-article-section}}
            {{/pl-only-article-section-for-download-links}}
        
            <section class="article-section" data-behaviour="ArticleSection" id="references">
              <header class="article-section__header">
                <h2 class="article-section__header_text">References</h2>
              </header>
              <div class="article-section__body">
                {{> molecules-reference-list }}
              </div>
            </section>
        
            {{! May need to make the article section pattern more content flexible (include other patterns/not have header). New variants? }}
            {{#articleMeta}}
              <section class="article-section">
                  {{> molecules-article-meta }}
              </section>
            {{/articleMeta}}
        
          </div>
          
        </div>
        
      </main>

    </div>

    {{#furtherReading}}
      {{> organisms-listing-read-more }}
    {{/furtherReading}}

    {{#emailCta}}
    {{> organisms-email-cta }}
    {{/emailCta}}

    {{> organisms-footer }}
  </div> {{! /.global-inner }}
</div> {{! /.global-wrapper }}
