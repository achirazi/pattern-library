<div class="modal modal-nojs {{#smallDeviceOnly}}small-device{{/smallDeviceOnly}}" data-behaviour="Modal">
  <a href="" class="modal-click">Open modal window</a>
  <div class="modal-container">
      <div class="modal-content">
        <h6>{{{title}}}</h6>
        <a href="" class="modal-content__button modal-content__close-button">{{closeBtnText}}</a>
        <div class='reference modal-content__clipboard'>
          {{#body}}
            {{{body}}}
          {{/body}}
        </div>
      </div>
  </div>
</div>
